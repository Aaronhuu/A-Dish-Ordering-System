<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnchangemenu"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_weight="0.15"
            android:text="Change Menu"
            android:textSize="30sp"
            android:background="#83af9b" />

        <Button
            android:id="@+id/btnallocatechef"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Allocate Chef"
            android:textSize="30sp"
            android:background="#c8c8a9"
            android:layout_weight="0.15" />

        <Button
            android:id="@+id/btnsetdiscount"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Set Discount"
            android:textSize="30sp"
            android:background="#f9d1ad"
            android:layout_weight="0.15"/>

        <Button
            android:id="@+id/btnviewcomment"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="View Comment"
            android:textSize="30sp"
            android:background="#fc9d9a"
            android:layout_weight="0.15"/>

    </LinearLayout>
</LinearLayout>