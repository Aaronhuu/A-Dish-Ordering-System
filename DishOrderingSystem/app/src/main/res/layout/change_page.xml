<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg2"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin">




        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/bk2">
        <ImageView
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:id="@+id/dishpicinchangemenu"
            android:background="@drawable/bk1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="NAME:"
                    android:id="@+id/dishnameinchangemenu" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="PRICE:"
                    android:id="@+id/dishpriceinchangemenu"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>






        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  New Name:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/newdishname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#8b8b8b" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  New Price:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/newdishprice"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="#8b8b8b"
                android:singleLine="true">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/checkresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check RESULT"
            android:background="#f4cb7d" />

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/comfirmchange"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Confirm change"
            android:background="#f4cb7d" />

    </LinearLayout>

</LinearLayout>
